<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.denysord88</groupId>
  <artifactId>TA_Appium_POCAPP</artifactId>
  <version>0.1.0</version>
  <build>
    <finalName>${project.groupId}.${project.artifactId}-${project.version}</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>${maven-compiler-plugin.version}</version>
        <configuration>
          <source>${maven.compiler.source}</source>
          <target>${maven.compiler.target}</target>
          <encoding>UTF-8</encoding>
          <annotationProcessorPaths>
            <path>
              <groupId>org.projectlombok</groupId>
              <artifactId>lombok</artifactId>
              <version>${lombok.version}</version>
            </path>
          </annotationProcessorPaths>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>${maven-shade-plugin.version}</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>com.denysord88.Main</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <properties>
    <guava.version>31.1-jre</guava.version>
    <testng.version>7.6.1</testng.version>
    <slf4j.version>2.0.3</slf4j.version>
    <gson.version>2.10</gson.version>
    <rest-assured.version>5.2.0</rest-assured.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <commons-io.version>2.11.0</commons-io.version>
    <java-dotenv.version>5.2.2</java-dotenv.version>
    <selenium-java.version>4.5.3</selenium-java.version>
    <maven.compiler.source>11</maven.compiler.source>
    <maven-shade-plugin.version>3.4.1</maven-shade-plugin.version>
    <maven-compiler-plugin.version>3.10.1</maven-compiler-plugin.version>
    <lombok.version>1.18.24</lombok.version>
    <maven.compiler.target>11</maven.compiler.target>
    <appium.java-client.version>8.2.0</appium.java-client.version>
  </properties>
</project>
